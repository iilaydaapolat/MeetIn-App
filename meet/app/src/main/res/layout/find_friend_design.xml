<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    >

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="298dp">

        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="281dp"
            android:layout_height="208dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image"></ImageView>


        <TextView
            android:id="@+id/name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_notification"
            android:layout_marginTop="5dp"
            android:text="user name"
            android:textAlignment="center"
            android:textColor="#7986CB"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/name_notification2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_notification"
            android:layout_marginTop="37dp"
            android:text="user name"
            android:textAlignment="center"
            android:textColor="#7986CB"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/request_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_notification"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="79dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:text="Accept Friend Request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:visibility="gone"></Button>


        <Button
            android:id="@+id/request_decline_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_accept_btn"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="79dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/holo_blue_light"
            android:padding="5dp"
            android:text="Cancel Friend Request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:visibility="gone"></Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>